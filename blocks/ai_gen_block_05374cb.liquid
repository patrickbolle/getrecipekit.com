{% doc %}
  @prompt
    minimal hero section with large heading text, smaller description text, and the option for 2 buttons. allow for a background colour or gradient. allow height adjustment, text alignment, padding, etc. emulate stripe's hero., the section needs to span the entire width, that looks amazing, but i want to set the theme header as transparent, and the background we are setting in this hero isn't being shown as the header bg

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    background: {% if block.settings.background_type == 'gradient' %}{{ block.settings.background_gradient }}{% else %}{{ block.settings.background_color }}{% endif %};
    min-height: {{ block.settings.section_height }}px;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: {{ block.settings.text_alignment }};
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    position: relative;
    margin-top: calc(-1 * var(--header-height, 80px));
    padding-top: calc({{ block.settings.padding_top }}px + var(--header-height, 80px));}

  .ai-hero-content-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_width }}px;
    width: 100%;
    position: relative;
    z-index: 1;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.1;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    letter-spacing: -0.02em;
  }

  .ai-hero-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    color: {{ block.settings.description_color }};
    margin: 0 0 {{ block.settings.description_spacing }}px;
    opacity: 0.9;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.button_gap }}px;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
    flex-wrap: wrap;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid transparent;
    cursor: pointer;
    min-width: 120px;}

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_text }};
    border-color: {{ block.settings.button_primary_bg }};
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_hover_bg }};
    color: {{ block.settings.button_primary_hover_text }};
    border-color: {{ block.settings.button_primary_hover_bg }};
    transform: translateY(-1px);
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_bg }};
    color: {{ block.settings.button_secondary_text }};
    border-color: {{ block.settings.button_secondary_border }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_hover_bg }};
    color: {{ block.settings.button_secondary_hover_text }};
    border-color: {{ block.settings.button_secondary_hover_border }};
    transform: translateY(-1px);
  }

  {% if block.settings.transparent_header %}
    .shopify-section-header {
      position: absolute !important;
      top: 0;
      left: 0;
      right: 0;
      z-index: 10;
      background: transparent !important;
    }

    .shopify-section-header .header {
      background: transparent !important;border-bottom: none !important;
      box-shadow: none !important;
    }

    .shopify-section-header .header__wrapper {
      background: transparent !important;
    }

    .shopify-section-header .header__heading,
    .shopify-section-header .header__menu-item,
    .shopify-section-header .header__icon,
    .shopify-section-header .header__heading-link {
      color: {{ block.settings.header_text_color }} !important;
    }

    .shopify-section-header .header__menu-item:hover {
      color: {{ block.settings.header_text_hover_color }} !important;
    }

    .shopify-section-header .header__icon svg {
      stroke: {{ block.settings.header_text_color }} !important;
    }

    .shopify-section-header .header__icon:hover svg {
      stroke: {{ block.settings.header_text_hover_color }} !important;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-hero-section-{{ ai_gen_id }} {
      min-height: {{ block.settings.section_height | times: 0.7 }}px;
      padding: calc({{ block.settings.padding_top | times: 0.7 }}px + var(--header-height, 80px)) {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;text-align: center;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-hero-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      justify-content: center;
      flex-direction: column;
      align-items: center;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      width: 100%;
      max-width: 280px;
    }
  }
{% endstyle %}

<section class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-hero-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    {% if block.settings.show_buttons %}
      <div class="ai-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.button_1_text != blank %}
          <a 
            href="{{ block.settings.button_1_link }}" 
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
          >
            {{ block.settings.button_1_text }}
          </a>
        {% endif %}

        {% if block.settings.button_2_text != blank %}
          <a 
            href="{{ block.settings.button_2_link }}" 
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.button_2_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

