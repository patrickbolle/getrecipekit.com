{{ 'rk-pricing.css' | asset_url | stylesheet_tag }}

<section class="rk-pricing" data-section-id="{{ section.id }}">
  <div class="rk-pricing__container">
    <div class="rk-pricing__header">
      {% if section.settings.eyebrow != blank %}
        <span class="rk-pricing__eyebrow">{{ section.settings.eyebrow }}</span>
      {% endif %}
      <h2 class="rk-pricing__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="rk-pricing__subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.show_billing_toggle %}
        <div class="rk-pricing__billing-toggle">
          <span class="rk-pricing__billing-option" data-billing="monthly">Monthly</span>
          <button class="rk-pricing__toggle" aria-label="Toggle billing period">
            <span class="rk-pricing__toggle-slider"></span>
          </button>
          <span class="rk-pricing__billing-option rk-pricing__billing-option--active" data-billing="yearly">
            Yearly
            <span class="rk-pricing__savings-badge">Save up to 17%</span>
          </span>
        </div>
      {% endif %}
    </div>

    <div class="rk-pricing__plans">
      {% for block in section.blocks %}
        {% if block.type == 'plan' %}
          <div class="rk-pricing__plan {% if block.settings.featured %}rk-pricing__plan--featured{% endif %}" {{ block.shopify_attributes }}>
            {% if block.settings.featured and block.settings.badge_text != blank %}
              <div class="rk-pricing__badge">{{ block.settings.badge_text }}</div>
            {% endif %}

            <div class="rk-pricing__plan-header">
              {% if block.settings.icon != blank %}
                <div class="rk-pricing__plan-icon">{{ block.settings.icon }}</div>
              {% endif %}
              <h3 class="rk-pricing__plan-name">{{ block.settings.plan_name }}</h3>
              <p class="rk-pricing__plan-description">{{ block.settings.description }}</p>
            </div>

            <div class="rk-pricing__plan-price">
              <div class="rk-pricing__price-wrapper">
                <span class="rk-pricing__currency">$</span>
                <span class="rk-pricing__amount" data-monthly="{{ block.settings.monthly_price }}" data-yearly="{{ block.settings.yearly_price }}">
                  {{ block.settings.yearly_price }}
                </span>
                <span class="rk-pricing__period">/mo</span>
              </div>
              {% if block.settings.yearly_total != blank %}
                <p class="rk-pricing__billed-yearly">Billed yearly at ${{ block.settings.yearly_total }}</p>
              {% endif %}
              {% if block.settings.savings_text != blank %}
                <p class="rk-pricing__savings">{{ block.settings.savings_text }}</p>
              {% endif %}
            </div>

            <a href="{{ block.settings.cta_link | default: '#' }}" class="rk-pricing__cta {% if block.settings.featured %}rk-pricing__cta--featured{% endif %}">
              {{ block.settings.cta_text | default: 'Start Free Trial' }}
            </a>

            {% if block.settings.trial_text != blank %}
              <p class="rk-pricing__trial">{{ block.settings.trial_text }}</p>
            {% endif %}

            <div class="rk-pricing__features">
              {% if block.settings.features_heading != blank %}
                <h4 class="rk-pricing__features-heading">{{ block.settings.features_heading }}</h4>
              {% endif %}
              <ul class="rk-pricing__features-list">
                {% assign features = block.settings.features | newline_to_br | split: '<br />' %}
                {% for feature in features %}
                  {% if feature != blank %}
                    <li class="rk-pricing__feature-item">
                      <svg class="rk-pricing__check-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <circle cx="10" cy="10" r="10" fill="currentColor" opacity="0.1"/>
                        <path d="M6 10L9 13L14 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                      <span>{{ feature }}</span>
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.show_addons %}
      <div class="rk-pricing__addons">
        <div class="rk-pricing__addons-header">
          <h3 class="rk-pricing__addons-heading">{{ section.settings.addons_heading | default: 'Add-ons & Services' }}</h3>
          <p class="rk-pricing__addons-description">{{ section.settings.addons_description }}</p>
        </div>

        <div class="rk-pricing__addons-grid">
          {% for block in section.blocks %}
            {% if block.type == 'addon' %}
              <div class="rk-pricing__addon" {{ block.shopify_attributes }}>
                <div class="rk-pricing__addon-header">
                  {% if block.settings.addon_icon != blank %}
                    <div class="rk-pricing__addon-icon">{{ block.settings.addon_icon }}</div>
                  {% endif %}
                  <h4 class="rk-pricing__addon-name">{{ block.settings.addon_name }}</h4>
                </div>
                <p class="rk-pricing__addon-description">{{ block.settings.addon_description }}</p>
                <div class="rk-pricing__addon-price">
                  <span class="rk-pricing__addon-amount">${{ block.settings.addon_price }}</span>
                  <span class="rk-pricing__addon-type">{{ block.settings.price_type | default: 'one-time' }}</span>
                </div>
                {% if block.settings.addon_cta_text != blank %}
                  <a href="{{ block.settings.addon_cta_link | default: '#' }}" class="rk-pricing__addon-cta">
                    {{ block.settings.addon_cta_text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {% if section.settings.show_faq_link %}
      <div class="rk-pricing__footer">
        <p class="rk-pricing__footer-text">
          {{ section.settings.footer_text }}
          {% if section.settings.footer_link_text != blank %}
            <a href="{{ section.settings.footer_link | default: '#' }}" class="rk-pricing__footer-link">
              {{ section.settings.footer_link_text }}
            </a>
          {% endif %}
        </p>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!section) return;

    const toggle = section.querySelector('.rk-pricing__toggle');
    const billingOptions = section.querySelectorAll('.rk-pricing__billing-option');
    const priceAmounts = section.querySelectorAll('.rk-pricing__amount');

    if (!toggle) return;

    let isYearly = true;

    toggle.addEventListener('click', function() {
      isYearly = !isYearly;
      toggle.classList.toggle('rk-pricing__toggle--monthly');

      billingOptions.forEach(option => {
        option.classList.toggle('rk-pricing__billing-option--active');
      });

      priceAmounts.forEach(amount => {
        const monthly = amount.dataset.monthly;
        const yearly = amount.dataset.yearly;
        amount.textContent = isYearly ? yearly : monthly;
      });
    });
  });
</script>

