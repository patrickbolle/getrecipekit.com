{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (max-width: 990px) {
    .footer__cta {
      text-align: center;
      padding-top: 40px;
      border-top: 1px solid rgba(var(--color-foreground), 0.08);
    }
  }
{%- endstyle -%}

<footer class='footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding'>
  <div class='page-width'>
    <div class='footer__content-top twcss:pt-5'>
      <div class='footer__blocks-wrapper twcss:grid twcss:grid-cols-1 twcss:md:grid-cols-3 twcss:lg:grid-cols-5 twcss:justify-center twcss:gap-10 twcss:md:gap-x-[100px]'>
        {%- for block in section.blocks -%}
          <div
            class='footer-block twcss:w-full twcss:text-left {% if block.type == "link_list" %}twcss:md:col-span-2 twcss:lg:!col-span-1{% else %}twcss:md:col-span-2 twcss:lg:col-span-2{% endif %} {% if block.type == "cta" %}twcss:md:col-span-5 twcss:lg:col-span-2{% endif %}'
            {{ block.shopify_attributes }}
          >
            {%- case block.type -%}
              {%- when 'link_list' -%}
                {%- if block.settings.menu != blank -%}
                  {%- if block.settings.heading != blank -%}
                    <h2 class='footer-block__heading inline-richtext twcss:text-center twcss:md:text-left'>
                      {{- block.settings.heading -}}
                    </h2>
                  {%- endif -%}
                  <ul class='footer-block__details-content list-unstyled twcss:flex twcss:flex-col twcss:items-center twcss:md:items-start'>
                    {%- for link in block.settings.menu.links -%}
                      <li>
                        <a
                          href='{{ link.url }}'
                          class='link link--text list-menu__item list-menu__item--link'
                        >
                          {{ link.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              {%- when 'text' -%}
                {%- if block.settings.heading != blank -%}
                  <h2 class='footer-block__heading inline-richtext'>{{- block.settings.heading -}}</h2>
                {%- endif -%}
                {%- if block.settings.image != blank -%}
                  <div class='footer-block__image-wrapper twcss:mb-4'>
                    {%- assign image_height = block.settings.image_width
                      | divided_by: block.settings.image.aspect_ratio
                      | round
                    -%}
                    {{
                      block.settings.image
                      | image_url: width: block.settings.image_width
                      | image_tag:
                        loading: 'lazy',
                        width: block.settings.image_width,
                        height: image_height,
                        class: 'footer-block__image'
                    }}
                  </div>
                {%- endif -%}
                <div class='footer-block__details-content rte footer-emphasis-text'>
                  {{ block.settings.subtext }}
                </div>
              {%- when 'cta' -%}
                <div class='footer__cta twcss:text-left lg:text-left twcss:md:border-t-0'>
                  <h2 class='footer-block__heading h3'>{{ block.settings.heading | escape }}</h2>
                  <div class='footer__cta-text'>{{ block.settings.text }}</div>
                  {%- if block.settings.button_text != blank and block.settings.button_link != blank -%}
                    <a href='{{ block.settings.button_link }}' class='button twcss:mt-5'>
                      {{ block.settings.button_text | escape }}
                    </a>
                  {%- endif -%}
                </div>
            {%- endcase -%}
          </div>
        {%- endfor -%}
      </div>
    </div>

    <div class='footer__content-bottom twcss:text-center twcss:pt-10 twcss:mt-10 twcss:border-t twcss:border-[rgba(var(--color-foreground),0.08)]'>
      <div class='footer__copyright caption'>
        <small class='copyright__content'>
          &copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url }}
        </small>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Menu",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu",
          "info": "Select the menu to display"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Heading",
          "label": "Heading"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 50,
          "max": 200,
          "step": 10,
          "unit": "px",
          "label": "Image width",
          "default": 100
        },
        {
          "type": "richtext",
          "id": "subtext",
          "default": "<p>Share store details, promotions, or brand content with your customers.</p>",
          "label": "Text"
        }
      ]
    },
    {
      "type": "cta",
      "name": "Call to Action",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Get Recipe Kit Today",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Stay updated with our latest products and news</p>",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_text",
          "default": "Learn More",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top margin",
      "default": 0
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      },
      {
        "type": "text"
      },
      {
        "type": "cta"
      }
    ]
  }
}
{% endschema %}
