{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class='color-{{ section.settings.color_scheme }} gradient'>
  <div class='section-{{ section.id }}-padding page-width'>
    <div class='twcss:max-w-4xl twcss:mx-auto twcss:text-center'>
      <figure class='twcss:relative'>
        {%- if section.settings.quote != blank -%}
          <div class='twcss:absolute twcss:-left-4 twcss:-top-4 twcss:text-6xl twcss:text-accent'>"</div>
          <blockquote class='twcss:relative twcss:text-2xl twcss:italic twcss:leading-relaxed twcss:mb-6 twcss:!border-l-0'>
            {{ section.settings.quote }}
          </blockquote>
        {%- endif -%}

        {%- if section.settings.author != blank -%}
          <figcaption class='twcss:text-xl twcss:font-medium twcss:text-gray-600'>
            â€” {{ section.settings.author }}
          </figcaption>
        {%- endif -%}
      </figure>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Quote",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "textarea",
      "id": "quote",
      "label": "Quote text",
      "default": "Add a quote from a customer or any other source to highlight important information."
    },
    {
      "type": "text",
      "id": "author",
      "label": "Attribution",
      "default": "Quote author"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Quote",
      "settings": {
        "quote": "Add a quote from a customer or any other source to highlight important information.",
        "author": "Quote author"
      }
    }
  ]
}
{% endschema %}
