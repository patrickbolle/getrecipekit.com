{{ 'section-accordion.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .accordion-{{ section.id }} details {
    border-left: 2px solid transparent;
  }

  .accordion-{{ section.id }} details > summary {
    transition: all 150ms ease-in-out;
  }

  .accordion-{{ section.id }} details > div {
    transition: height 400ms cubic-bezier(0.4, 0, 0.2, 1);
    height: 0;
    overflow: hidden;
  }

  .accordion-{{ section.id }} details:not([open]):hover > summary {
    background-color: rgb(243 244 246);
  }

  .accordion-{{ section.id }} details[open] {
    border-color: rgba(var(--color-accent), 0.8);
    border-bottom-color: transparent;
  }

  .accordion-{{ section.id }} details[open] .chevron {
    transform: rotate(180deg);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class='color-{{ section.settings.color_scheme }} gradient'>
  <div class='page-width section-{{ section.id }}-padding'>
    <div class='accordion-{{ section.id }} twcss:mx-auto twcss:max-w-6xl'>
      {%- if section.settings.title != blank -%}
        <div class='twcss:mb-12 twcss:text-center'>
          <h2 class='twcss:!text-4xl twcss:!font-bold twcss:md:!text-6xl {{ section.settings.heading_size }}'>
            {{ section.settings.title | escape }}
          </h2>
          {%- if section.settings.subtitle != blank -%}
            <p class='twcss:mt-4 twcss:text-gray-600'>{{ section.settings.subtitle | escape }}</p>
          {%- endif -%}
        </div>
      {%- endif -%}

      <div class='twcss:space-y-6'>
        {%- for block in section.blocks -%}
          <details
            class='group twcss:py-0 twcss:!border-b twcss:border-gray-200 twcss:bg-{{ section.settings.item_background }} twcss:transition-all twcss:duration-200'
            {{ block.shopify_attributes }}
            {% if section.settings.open_first_item and forloop.first %}
              open
            {% endif %}
          >
            <summary
              class='twcss:flex twcss:px-6 twcss:py-6 twcss:cursor-pointer twcss:items-center twcss:justify-between twcss:gap-1.5 twcss:text-{{ section.settings.title_color }} twcss:transition-all twcss:duration-200'
            >
              <h3 class='twcss:font-medium twcss:text-lg twcss:break-words twcss:whitespace-normal twcss:overflow-hidden'>
                {{ block.settings.title | escape }}
              </h3>

              <span class='chevron twcss:shrink-0 twcss:transition-all twcss:duration-300'>
                {% render 'icon-chevron-down' %}
              </span>
            </summary>

            <div class='twcss:px-6 twcss:pb-0 twcss:text-{{ section.settings.content_color }}'>
              {{ block.settings.content }}
            </div>
          </details>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const accordion = document.querySelector('.accordion-{{ section.id }}');
    const details = accordion.querySelectorAll('details');

    // Set initial heights
    details.forEach((detail) => {
      const content = detail.querySelector('div');
      if (detail.open) {
        content.style.height = `${content.scrollHeight}px`;
      }
    });

    // Add click handlers
    details.forEach((detail) => {
      const content = detail.querySelector('div');
      const summary = detail.querySelector('summary');

      summary.addEventListener('click', (e) => {
        e.preventDefault();

        // Close all other details first
        details.forEach((otherDetail) => {
          if (otherDetail !== detail && otherDetail.open) {
            const otherContent = otherDetail.querySelector('div');
            const otherHeight = otherContent.scrollHeight;
            otherContent.style.height = `${otherHeight}px`;
            otherContent.offsetHeight; // Force reflow
            otherContent.style.height = '0';

            const handleOtherTransitionEnd = () => {
              otherDetail.open = false;
              otherContent.style.height = '0';
              otherContent.removeEventListener('transitionend', handleOtherTransitionEnd);
            };
            otherContent.addEventListener('transitionend', handleOtherTransitionEnd);
          }
        });

        // Open this detail after closing others
        detail.open = true;

        // Force reflow before measuring height
        content.offsetHeight;
        const height = content.scrollHeight;
        content.style.height = `${height}px`;
      });
    });
  });
</script>

