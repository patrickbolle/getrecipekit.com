{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .review-card {
    background-color: rgba(245, 245, 245, 0.3);
    border: 1px solid rgba(200, 200, 200, 0.5);
  }
{%- endstyle -%}

<section class='twcss:bg-white section-{{ section.id }}-padding'>
  <div class='page-width twcss:py-12 twcss:sm:py-6 twcss:lg:py-16'>
    <div class='twcss:max-w-5xl twcss:mx-auto twcss:mb-16 twcss:text-center'>
      <h2 class='twcss:!text-4xl twcss:!font-bold twcss:md:!text-5xl twcss:leading-16 twcss:text-gray-900 twcss:relative'>
        <span class='twcss:bg-gradient-to-r twcss:font-bold'>
          {{ section.settings.title }}
        </span>
      </h2>
      {%- if section.settings.review_line != blank -%}
        {%- if section.settings.review_url != blank -%}
          <a
            href='{{ section.settings.review_url }}'
            class='twcss:mt-8 twcss:text-2xl twcss:text-gray-600 twcss:flex twcss:items-center twcss:justify-center twcss:gap-2 twcss:hover:text-red-500 twcss:transition-colors'
            {%- if section.settings.review_url_new_tab -%}
              target='_blank' rel='noopener noreferrer'
            {%- endif -%}
          >
        {%- else -%}
          <p
            class='twcss:mt-4 twcss:text-xl twcss:text-gray-600 twcss:flex twcss:items-center twcss:justify-center twcss:gap-2'
          >
        {%- endif -%}
        <svg
          xmlns='http://www.w3.org/2000/svg'
          class='twcss:size-6 twcss:text-red-500'
          viewBox='0 0 20 20'
          fill='currentColor'
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        {{ section.settings.review_line }}
        {%- if section.settings.review_url != blank -%}
          </a>
        {%- else -%}
          </p>
        {%- endif -%}
      {%- endif -%}
    </div>
    <div class='twcss:mt-9 twcss:[column-fill:balance] twcss:columns-1 twcss:gap-6 twcss:md:columns-2 twcss:sm:gap-6 twcss:lg:columns-3 twcss:lg:gap-8'>
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'testimonial' -%}
            <div class='twcss:mb-8 twcss:sm:break-inside-avoid' {{ block.shopify_attributes }}>
              <div class='review-card twcss:rounded-lg twcss:p-6 twcss:sm:p-8'>
                <div class='twcss:flex twcss:flex-col twcss:gap-6 twcss:text-center'>
                  <div class='twcss:w-50'>
                    <div class='twcss:flex twcss:justify-center twcss:gap-0.5 twcss:text-red-500'>
                      {%- for i in (1..5) -%}
                        <svg
                          xmlns='http://www.w3.org/2000/svg'
                          class='twcss:size-10'
                          viewBox='0 0 20 20'
                          fill='currentColor'
                        >
                          <path
                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                          />
                        </svg>
                      {%- endfor -%}
                    </div>
                  </div>

                  <div class='twcss:w-full'>
                    <p class='twcss:mt-0.5 twcss:text-2xl twcss:font-bold twcss:text-gray-900 twcss:text-left'>
                      {{ block.settings.author }}
                    </p>
                  </div>
                </div>

                <p class='twcss:mt-4 twcss:text-gray-700 twcss:text-md'>
                  {{ block.settings.content }}
                </p>
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Read trusted reviews from our customers"
    },
    {
      "type": "text",
      "id": "review_line",
      "label": "Average Review Line",
      "default": "5/5 from 75+ reviews on Shopify!"
    },
    {
      "type": "url",
      "id": "review_url",
      "label": "Review Line Link URL",
      "info": "Optional - Leave blank to display as text"
    },
    {
      "type": "checkbox",
      "id": "review_url_new_tab",
      "label": "Open link in new tab",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Avatar"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "John Doe"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit. Maiores quaerat quasi ipsa repellendus quam!"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
